{% block page_content1 %}
    {# {% form_theme form 'widget/fields-block.html.twig' %}#}
    <div class="modal-header bg-primary">
        <h2 id="editUserModalTitle" class="modal-title " style="margin-top: -15px;color: white">EDITION-{{ titre | upper  }}
        </h2>
        <button type="button" class="close" data-dismiss="modal" style="margin-top: -15px;color: white"
                aria-hidden="true">Ã—
        </button>
    </div>
    {{ form_start(form, {'attr': {'role':'form', 'class': 'form'}}) }}
    <div class="modal-body">
        {# {{ include('includes/ajax/response.html.twig') }} #}

        <div class="contenu" style="margin-top: -10px">
            <div class="row">
                <div class="form-group col-md-6 ">
                    <label class="sr-onl" for="userinput1">Date</label>
                    {{ form_widget(form.date,{'attr':{'class':'form-control border-primary','id':'userinput1','placeholder':'Date','required':'required' }}) }}
                    {# <input type="text" id="userinput1" class="form-control border-primary" placeholder="Compte contribuable" name="name">#}
                </div>
                <div class="form-group col-md-6">
                    <label class="sr-onl" for="userinput1">Type de l'acte</label>
                    {{ form_widget(form.type,{'attr':{'class':'form-control border-primary','id':'userinput1','placeholder':'Type de Acte' }}) }}
                    {# <input type="text" id="userinput1" class="form-control border-primary" placeholder="Compte contribuable" name="name">#}
                </div>

            </div>
            <div class="row">
                <div class="form-group col-md-6 ">
                    <label class="sr-onl" for="userinput1">Objet</label>
                    {{ form_widget(form.objet,{'attr':{'class':'form-control border-primary','id':'userinput1','placeholder':'Objet'}}) }}

                </div>
                <div class="form-group col-md-6 ">
                    <label class="sr-onl" for="userinput1">Montant de la transaction</label>
                    {{ form_widget(form.montant,{'attr':{'class':'form-control border-primary','id':'userinput1','placeholder':'Montant de la transaction','required':'required'}}) }}
                    {# <input type="text" id="userinput1" class="form-control border-primary" placeholder="Compte contribuable" name="name">#}
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6 ">
                    <label class="sr-onl" for="userinput1">Vendeur</label>
                    {{ form_widget(form.vendeur,{'attr':{'class':'form-control border-primary','id':'userinput1','placeholder':'Vendeur','required':'required'}}) }}
                    {# <input type="text" id="userinput1" class="form-control border-primary" placeholder="Compte contribuable" name="name">#}
                </div>
                <div class="form-group col-md-6 ">
                    <label class="sr-onl" for="userinput1">Acheteur</label>
                    {{ form_widget(form.acheteur,{'attr':{'class':'form-control border-primary','id':'userinput1','placeholder':'Acheteur','required':'required'}}) }}
                    {# <input type="text" id="userinput1" class="form-control border-primary" placeholder="Compte contribuable" name="name">#}
                </div>
            </div>

        </div>
        <span class="col-lg-12 groupe" id="groupe" data-prototype="{{ image(form.fichiers.vars.prototype)|e('html_attr') }}">

            {#   <div class="row" >#}

            {#   <div class="col-md-1">#}
            {#  <button type="button" class="waves-effect waves-light btn btn-primary  add_intervention" >
                  <i class="fa fa-plus-circle"></i></button>#}

            {#   </div>#}

            {# </div>
             <br>#}
            <div class="col-md-12">
                <a href="#" class="btn btn-secondary add_groupe" style="margin-left: -20px" data-card-tool="remove"
                   data-toggle="tooltip" data-placement="top" title="" data-original-title="Remove Card">Ajouter un
                    fichier </a>
            </div>
            {% for row in form.fichiers %}
                <span class="container col-md-12">
                    {{ image(row|e) }}

                </span>
            {% endfor %}
 <input class="after" type="hidden"/>
        </span>


    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger text-left" data-dismiss="modal">Annuler</button>
        <button type="submit" class="btn btn-primary ">Valider</button>
