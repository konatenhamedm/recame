    <style>
        body {
            font-family: sans-serif;
            font-size: 10pt;
            color: rgb(0, 25, 81);
            font-weight: bold;
        }
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
        .items th{
            border: 1px solid #cccccc;
            border-top: none;
            text-align: left;
            padding: 8px 3px;
            font-size: 0.9em;
        }
        .info{
            margin-left: 410px;
